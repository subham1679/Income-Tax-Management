    <body>
    
    
    
        
           <div class="header">    
            <h2>Welcome Admin</h2>
            <p >Fill the detials of the Tax payer.</p> 
            </div>
               
           <div class="content">
            <form action="/tax_info" method="post">
          <div class="form-row">
           <div class="form-group col-md-6">
              <label for="TaxID">TaxId</label>
              <input type="text" class="form-control" id="TaxID" name="tid" placeholder="Enter ID">
            </div>
            <div class="form-group col-md-6">
              <label for="PayerID">PayerID</label>
              <input type="text" class="form-control" id="PayerID" name="pid" placeholder="PayerID">
            </div>
            <div class="form-group col-md-6">
              <label for="Tax-Money">Tax Amount</label>
              <input type="text" class="form-control" id="Tax-Money" name="tax_mon" placeholder="Enter amount">
            </div>
            <div class="form-group col-md-6">
              <label for="DOP">Date of ITR</label>
              <input type="text" class="form-control" id="DOP" name="itr" placeholder="dd-mm-yyyy">
            </div>
            
          </div>
          
            <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="TotalIncome">Annual Total Income</label>
                      <input type="text" class="form-control" id="TotalIncome" name="tot_mon" placeholder="Annual Income" >
                    </div>
                      
                      <div class="form-group col-md-6">
                        <label for="Percent">Tax in percent</label>
                        <input type="text" class="form-control" id="Percent" name="percent" placeholder="Annual Income" >

                    </div>
             </div>
                       
                
                <div class="form-row">
                    <div class="form-group col-md-12">
                      <label for="Incomeafter">After taxation</label>
                      <input type="text" class="form-control" id="Incomeafter" name="inc_aft" placeholder="Income after Taxation">
                    </div>
                </div>
                
                
          
          
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div>Go Back To <a href="/admin">Admin Page</a></div>
        <div>Go Back To <a href="/">Home</a></div>
        </div>  
            

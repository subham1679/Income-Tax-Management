       <style>
           .content{
               width:1200px;
               height:500px;
               text-align: center;
               border: 2px solid skyblue;
               padding: 35px 30px;
               border-radius: 25px;
               margin-left: 200px;
               margin-top: 15px;
               margin-bottom: 200px; 
               margin-top: 50px;
           }
           
           .header {
               background: skyblue;
               text-align: center;
               height:200px;
           }
          
           .header h2{
               font-size: 48px;
               font-weight: 500;
               letter-spacing: 2px;
               color: greenyellow;
           }
           
           .header p{
               font-size: 24px;
               font-weight:500;
               letter-spacing: 2px;
               color: greenyellow;
               
           }
       
       </style>
